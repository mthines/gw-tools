{
  "name": "@gw-tools/gw-tool",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/gw-tool/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "deno check src/main.ts",
        "cwd": "packages/gw-tool"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "deno test --allow-all",
        "cwd": "packages/gw-tool"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "deno lint",
        "cwd": "packages/gw-tool"
      }
    },
    "fmt": {
      "executor": "nx:run-commands",
      "options": {
        "command": "deno fmt",
        "cwd": "packages/gw-tool"
      }
    },
    "fmt-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "deno fmt --check",
        "cwd": "packages/gw-tool"
      }
    },
    "run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "deno run --allow-all src/main.ts",
        "cwd": "packages/gw-tool"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "deno run --allow-all --watch src/main.ts",
        "cwd": "packages/gw-tool"
      }
    },
    "compile": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/packages/gw-tool"],
      "options": {
        "command": "deno compile --allow-all --no-npm --output ../../dist/packages/gw-tool/gw src/main.ts",
        "cwd": "packages/gw-tool"
      }
    },
    "compile-all": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/packages/gw-tool/binaries"],
      "inputs": [
        "{projectRoot}/src/**/*.ts",
        "{projectRoot}/deno.json",
        "{projectRoot}/deno.lock"
      ],
      "cache": true,
      "options": {
        "commands": [
          "mkdir -p ../../dist/packages/gw-tool/binaries",
          "deno compile --allow-all --no-npm --target x86_64-unknown-linux-gnu --output ../../dist/packages/gw-tool/binaries/gw-linux-x64 src/main.ts",
          "deno compile --allow-all --no-npm --target aarch64-unknown-linux-gnu --output ../../dist/packages/gw-tool/binaries/gw-linux-arm64 src/main.ts",
          "deno compile --allow-all --no-npm --target x86_64-apple-darwin --output ../../dist/packages/gw-tool/binaries/gw-macos-x64 src/main.ts",
          "deno compile --allow-all --no-npm --target aarch64-apple-darwin --output ../../dist/packages/gw-tool/binaries/gw-macos-arm64 src/main.ts",
          "deno compile --allow-all --no-npm --target x86_64-pc-windows-msvc --output ../../dist/packages/gw-tool/binaries/gw-windows-x64.exe src/main.ts"
        ],
        "parallel": true,
        "cwd": "packages/gw-tool"
      }
    },
    "npm-pack": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/packages/gw-tool/npm"],
      "inputs": [
        "{projectRoot}/npm/**/*",
        "{projectRoot}/README.md",
        "^compile-all"
      ],
      "cache": true,
      "options": {
        "commands": [
          "mkdir -p ../../dist/packages/gw-tool/npm",
          "cp -r npm/* ../../dist/packages/gw-tool/npm/",
          "cp README.md ../../dist/packages/gw-tool/npm/"
        ],
        "parallel": false,
        "cwd": "packages/gw-tool"
      },
      "dependsOn": ["compile-all"]
    },
    "release": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./packages/gw-tool/scripts/release.sh"
      }
    },
    "publish-jsr": {
      "executor": "nx:run-commands",
      "options": {
        "command": "deno publish --allow-dirty",
        "cwd": "packages/gw-tool"
      }
    }
  }
}
